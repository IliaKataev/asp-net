@model CarApplication.models.Car


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Color">Color</label>
        <input asp-for="Color" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Manufacturer">Man</label>
        <input asp-for="Manufacturer" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label>
        <input asp-for="Year" class="form-control" type="number"/>
    </div>
    <div class="form-group">
        <label asp-for="EngineVolume">Engine</label>
        <input asp-for="EngineVolume" class="form-control" type="number" step="0.1"/>
    </div>

    <br/>

    <button type="submit">Сохранить</button>
</form>
